  stars              Int
  facebook           String?
  whatsapp           String?
  instagram          String?
  references         String
  googleMaps         String?
  latitude           String?
  longitude          String?
  totalFloors        Int
  totalRooms         Int
  editedBy           String?              @db.VarChar(60)
  logoImage          String
  imageUrl           String
  pathDirImage       String
  pathImageName      String
  placeId            String
  // smoke              Boolean
  // facilityId       Facilities       @relation(fields: [facilitiesId], references: [id])
  // facilitiesId     Int
  // comment          Comments         @relation(fields: [commentId], references: [id])
  // commentId        Int
  placesOfInterest   PlacesInterest[]
  usersOnHotels      UsersOnHotels[]
  rooms              Rooms[]
